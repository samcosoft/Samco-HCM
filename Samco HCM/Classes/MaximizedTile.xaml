<UserControl xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" x:Class="Samco_HCM.Classes.MaximizedTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" FlowDirection="RightToLeft"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10" BorderBrush="White" BorderThickness="3" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <ScrollViewer>
                <dx:UniformStackPanel Name="ItemPanel" Orientation="Vertical" ChildSpacing="10"/>
            </ScrollViewer>
            <Grid Grid.Row="1">
                <Separator/>
                <TextBlock TextAlignment="Center" FontSize="18" VerticalAlignment="Center" FontFamily="{StaticResource Vazir}">
                    برای کوچک کردن کاشی اینجا را کلیک کنید.
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</UserControl>
